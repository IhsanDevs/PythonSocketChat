            <div class="col-sm-9 col-md-9 col-lg-8 mx-auto bg-dark w-100 h-auto p-2">
                <form><textarea id="text_message"
                        class="placeholder border rounded border-5 border-light form-control overflow-auto"
                        placeholder="Message..."></textarea><button
                        class="btn btn-primary bg-primary bg-gradient border rounded border-5 border-light shadow-lg mt-2 me-2"
                        data-bs-toggle="modal" data-bss-tooltip="" type="button" title="Insert images"
                        data-bs-target="#modal-message-misc"><i class="far fa-image"></i></button><button
                        class="btn btn-primary bg-primary bg-gradient border rounded border-5 border-light shadow-lg mt-2"
                        data-bs-toggle="tooltip" data-bss-tooltip="" type="button" title="Send"
                        onclick="sendMessage()"><i class="icon ion-android-send"></i></button></form>
            </div>
        </div>
    </div>

    {# modal set username #}
    <div class="modal" role="dialog" tabindex="-1" id="modal-set-username">
        <div class="modal-dialog modal-dialog-scrollable modal-fullscreen" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Setting</h4>
                </div>
                <div class="modal-body">
                    <p>Please enter a username :</p><input type="text" id="username" class="form-control"
                        name="username" placeholder="Username...">
                </div>
                <div class="modal-footer"><button class="btn btn-primary" id="save_username" type="button"
                        onclick="saveUsername()">Save</button></div>
            </div>
        </div>
    </div>

    {# modal message misc #}
    <div class="modal fade" role="dialog" tabindex="-1" id="modal-message-misc">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Oups..</h4><button class="btn-close" type="button" aria-label="Close"
                        data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>This feature doesn't available for now. If you want to contribute this project, you can visit
                        this link. <a href="https://github.com/IhsanDevs/PythonChat"
                            target="_blank">https://github.com/IhsanDevs/PythonChat</a></p>
                </div>
                <div class="modal-footer"><button class="btn btn-secondary" type="button"
                        data-bs-dismiss="modal">Close</button></div>
            </div>
        </div>
    </div>

    {# toast template #}
    <div class="toast fade top-50 end-0 position-fixed bg-primary text-light border-0 hide" role="alert" id="toast-1"
        data-bs-delay="3000">
        <div class="toast-body" role="alert">
            <p><span style="color: rgb(255, 255, 255);" id="toast_message">Nullam id dolor id nibh ultricies vehicula ut
                    id elit. Cras
                    justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget
                    metus.</span></p>
        </div>
    </div>

